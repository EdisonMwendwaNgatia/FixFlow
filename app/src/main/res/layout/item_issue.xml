<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/spotify_dark_gray">

    <TextView
        android:id="@+id/tvIssueTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/issue_title"
        android:textSize="16sp"
        android:textColor="@color/spotify_white"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/tvIssueDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/issue_description"
        android:textSize="14sp"
        android:textColor="@color/spotify_light_gray"
        android:fontFamily="sans-serif" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/spotify_green"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/status_open"
            android:textColor="@color/spotify_black"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/issue_date"
            android:textColor="@color/spotify_light_gray"
            android:textSize="12sp"
            android:fontFamily="sans-serif" />
    </LinearLayout>
</LinearLayout>