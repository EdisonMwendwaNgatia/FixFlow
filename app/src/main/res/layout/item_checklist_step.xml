<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/spotify_dark_gray"
    android:layout_marginBottom="8dp">

    <CheckBox
        android:id="@+id/checkboxStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/spotify_green"
        android:layout_marginEnd="12dp"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/tvStepDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/checklist_step"
        android:textSize="16sp"
        android:textColor="@color/spotify_white"
        android:fontFamily="sans-serif"
        android:layout_gravity="center_vertical"/>

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/spotify_light_gray"
        android:padding="8dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/delete_step"
        android:importantForAccessibility="yes"/>

</LinearLayout>